<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/cardview_border">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvMyRequestItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llMyRequestInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMyRequestType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Новое доверенное лицо"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvMyRequestInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Васильев Константин"
                    android:textColor="#2A2A2A"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivMyRequestStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_accept_status" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>