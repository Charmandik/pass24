<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/llStartWorkHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent">
<!--        app:layout_constraintStart_toTopOf="parent">-->


        <TextView
            android:id="@+id/tvStartWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="56dp"
            android:text="@string/text_start_work"
            android:textColor="#2A2A2A"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/ivStartLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="28dp"
            android:src="@drawable/ic_start_logo"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llStartWorkBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llStartWorkHeader">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvStartInfo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="29dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="@string/text_start_info"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvFindObject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_to_find_object"
            android:textAlignment="center"
            android:textColor="#51CFC0"
            android:paddingTop="40dp"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvDemoMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_to_demo"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="26dp"
        android:textColor="#E9413C"/>


</androidx.constraintlayout.widget.ConstraintLayout>